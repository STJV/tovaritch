{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test"
            ],
            "django": true
        },
        {
            "type": "firefox",
            "request": "attach",
            "name": "Attach to Firefox",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/kileed/ui",
            "pathMappings": [
                {
                    "url": "webpack:///./src/*",
                    "path": "${webRoot}/src/*"
                },
                {
                    "url": "webpack:///src/*",
                    "path": "${webRoot}/src/*"
                },
                {
                    "url": "webpack:///*",
                    "path": "*"
                },
                {
                    "url": "webpack:///./~/*",
                    "path": "${webRoot}/node_modules/*"
                }
            ]
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000",
                "--noreload",
            ],
            "justMyCode": false,
            "django": true
        },
        {
            "name": "Mocha Tests",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/.env/bin/node",
            "runtimeArgs": [
                "node_modules/@vue/cli-service/bin/vue-cli-service.js",
                "test:unit",
                "-w",
                "--inspect-brk"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/kileed/ui",
            "disableOptimisticBPs": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "outFiles": [ "${workspaceFolder}/kileed/ui/src/**/*.js"],
            "port": 9229
        }
    ]
}